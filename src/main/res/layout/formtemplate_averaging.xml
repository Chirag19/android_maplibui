<com.nextgis.maplibui.formcontrol.Averaging xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="?attr/control_disabled">

    <EditText
        android:id="@+id/value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:enabled="false"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/average"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:background="@drawable/dark_button"
        android:text="@string/averaging"
        android:textColor="@color/color_white" />
</com.nextgis.maplibui.formcontrol.Averaging>