<resources>

    <attr name="ThemeOverlay.NextGIS.Toolbar" format="reference"/>
    <attr name="ThemeOverlay.NextGIS.ToolbarPopup" format="reference"/>
    <attr name="ic_action_visibility_on_inverse" format="reference"/>
    <attr name="ic_action_visibility_on" format="reference"/>
    <attr name="ic_action_visibility_off_inverse" format="reference"/>
    <attr name="ic_action_visibility_off" format="reference"/>
    <attr name="ic_action_delete_inverse" format="reference"/>
    <attr name="ic_action_delete" format="reference"/>
    <attr name="ic_action_content_select_all_inverse" format="reference"/>
    <attr name="ic_action_content_select_all" format="reference"/>
    <attr name="ic_menu_moreoverflow_inverse" format="reference"/>
    <attr name="ic_menu_moreoverflow" format="reference"/>

    <style name="Theme.NextGIS.AppCompat.Light"
           parent="Theme.AppCompat.Light.NoActionBar">
        <item name="isLightTheme">true</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="undoBarStyle">@style/UndoBarMaterialStyle</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowActionModeOverlay">false</item>
        <item name="ThemeOverlay.NextGIS.Toolbar">@style/Theme.NextGIS.AppCompat.ActionBar</item>
        <item name="ThemeOverlay.NextGIS.ToolbarPopup">@style/ThemeOverlay.NextGIS.AppCompat.Light</item>
        <item name="android:textColorPrimary">@color/textColorPrimary.Light</item>
        <item name="android:textColorSecondary">@color/textColorSecondary.Light</item>
        <item name="android:textColor">@color/textColorPrimary.Light</item>
        <item name="colorControlNormal">@color/textColorPrimary.Light</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>
        <item name="android:editTextStyle">@style/EditTextStyle.Light</item>
        <item name="actionModeBackground">@drawable/action_mode</item>
        <item name="actionMenuTextColor">@color/textColorPrimary.Dark</item>

        <item name="ic_action_visibility_on_inverse">@drawable/ic_action_visibility_on_dark</item>
        <item name="ic_action_visibility_on">@drawable/ic_action_visibility_on_light</item>
        <item name="ic_action_visibility_off_inverse">@drawable/ic_action_visibility_off_dark</item>
        <item name="ic_action_visibility_off">@drawable/ic_action_visibility_off_light</item>
        <item name="ic_action_delete_inverse">@drawable/ic_action_delete_dark</item>
        <item name="ic_action_delete">@drawable/ic_action_delete_light</item>
        <item name="ic_action_content_select_all_inverse">@drawable/ic_action_content_select_all_dark</item>
        <item name="ic_action_content_select_all">@drawable/ic_action_content_select_all_light</item>
        <item name="ic_menu_moreoverflow_inverse">@drawable/ic_menu_moreoverflow_dark</item>
        <item name="ic_menu_moreoverflow">@drawable/ic_menu_moreoverflow_light</item>

        <item name="DatePickSpinnerBackground">@drawable/ic_spinner_calendar_light</item>
    </style>

    <style name="Theme.NextGIS.AppCompat.Dark"
           parent="Theme.AppCompat.NoActionBar">
        <item name="isLightTheme">false</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="undoBarStyle">@style/UndoBarMaterialStyle</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowActionModeOverlay">false</item>
        <item name="ThemeOverlay.NextGIS.Toolbar">@style/Theme.NextGIS.AppCompat.ActionBar</item>
        <item name="ThemeOverlay.NextGIS.ToolbarPopup">@style/ThemeOverlay.NextGIS.AppCompat.Dark</item>
        <item name="android:textColorPrimary">@color/textColorPrimary.Dark</item>
        <item name="android:textColorSecondary">@color/textColorSecondary.Dark</item>
        <item name="android:textColor">@color/textColorPrimary.Dark</item>
        <item name="colorControlNormal">@color/textColorPrimary.Dark</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>
        <item name="android:editTextStyle">@style/EditTextStyle.Dark</item>
        <item name="actionModeBackground">@drawable/action_mode</item>
        <item name="actionMenuTextColor">@color/textColorPrimary.Dark</item>

        <item name="ic_action_visibility_on_inverse">@drawable/ic_action_visibility_on_light</item>
        <item name="ic_action_visibility_on">@drawable/ic_action_visibility_on_dark</item>
        <item name="ic_action_visibility_off_inverse">@drawable/ic_action_visibility_off_light</item>
        <item name="ic_action_visibility_off">@drawable/ic_action_visibility_off_dark</item>
        <item name="ic_action_delete_inverse">@drawable/ic_action_delete_light</item>
        <item name="ic_action_delete">@drawable/ic_action_delete_dark</item>
        <item name="ic_action_content_select_all_inverse">@drawable/ic_action_content_select_all_light</item>
        <item name="ic_action_content_select_all">@drawable/ic_action_content_select_all_dark</item>
        <item name="ic_menu_moreoverflow_inverse">@drawable/ic_menu_moreoverflow_light</item>
        <item name="ic_menu_moreoverflow">@drawable/ic_menu_moreoverflow_dark</item>

        <item name="DatePickSpinnerBackground">@drawable/ic_spinner_calendar_dark</item>
    </style>

    <style name="EditTextStyle.Light" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/textColor.Light</item>
    </style>
    <style name="EditTextStyle.Dark" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/textColor.Dark</item>
    </style>

    <style name="Theme.NextGIS.AppCompat.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="actionButtonStyle">@style/Widget.AppCompat.Light.ActionButton</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryInverse.Light</item>
        <item name="android:textColor">@color/textColorPrimaryInverse.Light</item>
        <!--item name="android:textColorSecondary">@color/textColorSecondary.Light</item-->
        <item name="colorControlHighlight">@color/accent</item>
        <item name="colorControlNormal">@color/textColorSecondaryInverse.Light</item>
    </style>

    <style name="ThemeOverlay.NextGIS.AppCompat.Light" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/textColorPrimary.Light</item>
        <item name="android:textColor">@color/textColorPrimary.Light</item>
        <item name="android:textColorPrimaryInverse">@color/textColorPrimaryInverse.Light</item>
        <item name="android:textColorPrimaryDisableOnly">@color/textColorPrimary.Light</item>
        <item name="android:textColorSecondary">@color/textColorSecondary.Light</item>
        <item name="android:textColorSecondaryInverse">@color/textColorSecondaryInverse.Light</item>
    </style>

    <style name="ThemeOverlay.NextGIS.AppCompat.Dark" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorPrimary">@color/textColorPrimary.Dark</item>
        <item name="android:textColor">@color/textColorPrimary.Dark</item>
        <item name="android:textColorPrimaryInverse">@color/textColorPrimaryInverse.Dark</item>
        <item name="android:textColorPrimaryDisableOnly">@color/textColorPrimary.Dark</item>
        <item name="android:textColorSecondary">@color/textColorSecondary.Dark</item>
        <item name="android:textColorSecondaryInverse">@color/textColorSecondaryInverse.Dark</item>
    </style>

    <style name="Theme.NextGIS.AppCompat.Light.Dialog"
           parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="isLightTheme">true</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="android:textColor">@color/textColor.Light</item>
        <!-- Action Mode -->
        <item name="actionModeCutDrawable">@drawable/ic_action_content_cut</item>
        <item name="actionModeCopyDrawable">@drawable/ic_action_content_copy</item>
        <item name="actionModePasteDrawable">@drawable/ic_action_content_paste</item>
        <item name="actionModeSelectAllDrawable">@drawable/ic_action_content_select_all</item>
        <item name="actionModeShareDrawable">@drawable/ic_action_social_share</item>

        <item name="android:panelBackground">@color/background_material_light</item>
        <item name="panelBackground">@drawable/abc_menu_hardkey_panel_mtrl_mult</item>
        <item name="listChoiceBackgroundIndicator">@drawable/abc_list_selector_holo_light</item>
    </style>

    <attr name="DatePickSpinnerBackground" format="reference"/>

    <style name="DatePickSpinner" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:background">?attr/DatePickSpinnerBackground</item>
    </style>

</resources>